<Window x:Class="Classic_Chess.PromotionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classic_Chess"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Title="Select Promotion"
        Background="AntiqueWhite">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock>Select promotion for the pawn:</TextBlock>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Button x:Name="RookOP" Content="Rook" Margin="7" Click="Option_Click"/>
                <Button x:Name="BishopOP" Content="Bishop" Margin="7" Click="Option_Click"/>
                <Button x:Name="KnightOP" Content="Knight" Margin="7" Click="Option_Click"/>
                <Button x:Name="QueenOP" Content="Queen" Margin="7" Click="Option_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
